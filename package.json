{
  "name": "crowdsale-factory",
  "version": "1.0.0",
  "description": "The FriendsFingers' Crowdsale Factory Smart Contracts",
  "files": [
    "contracts",
    "test"
  ],
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "token",
    "truffle",
    "openzeppelin"
  ],
  "scripts": {
    "dev": "lite-server",
    "console": "truffle develop",
    "compile": "scripts/compile.sh",
    "coverage": "npm run compile && scripts/coverage.sh",
    "clean": "rm -rf coverage",
    "profile": "npm run clean && npm run coverage && open coverage/index.html",
    "test": "npm run compile && scripts/test.sh",
    "buidler:compile": "buidler compile",
    "buidler:coverage": "npm run buidler:compile && USE_BUIDLER=true scripts/coverage.sh",
    "buidler:console": "buidler console",
    "buidler:test": "buidler test",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "flat": "scripts/flat.sh",
    "analyze": "scripts/flat.sh && scripts/analyze.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FriendsFingers/crowdsale-factory.git"
  },
  "homepage": "https://github.com/FriendsFingers/crowdsale-factory/",
  "bugs": {
    "url": "https://github.com/FriendsFingers/crowdsale-factory/issues"
  },
  "author": "FriendsFingers (https://www.friendsfingers.com)",
  "contributors": [
    {
      "name": "Vittorio Minacori",
      "url": "https://github.com/vittominacori"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.3.6",
    "@nomiclabs/buidler-ganache": "^1.3.3",
    "@nomiclabs/buidler-truffle5": "^1.3.4",
    "@nomiclabs/buidler-web3": "^1.3.4",
    "@openzeppelin/test-helpers": "^0.5.6",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "ethereumjs-util": "^7.0.2",
    "ethjs-abi": "^0.2.1",
    "ganache-cli": "^6.9.1",
    "lite-server": "^2.5.4",
    "pify": "^5.0.0",
    "sol2uml": "^1.1.17",
    "solhint": "^3.0.0",
    "solidity-coverage": "^0.7.7",
    "surya": "^0.4.0",
    "truffle": "^5.1.29",
    "truffle-flattener": "^1.4.4",
    "web3": "^1.2.9"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.0.2",
    "eth-token-recover": "3.0.4"
  }
}
